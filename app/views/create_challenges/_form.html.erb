  <div class="field">
    <% form.label :description %>
    <%= form.text_field :description, id: :create_challenge_description, class:"form-control mb-2 mr-sm-2", placeholder:"Description" %>
  </div>

  <div class="field">
    <% form.label :tags %>
    <%= form.text_field :tags, id: :create_challenge_tags, class:"form-control mb-2 mr-sm-2", placeholder:"Tags" %>
  </div>

  <div class="field">
    <% form.label :user_id %>
    <%= form.text_field :user_id, id: :create_challenge_user_id, value: current_user.id, type: :hidden %>
