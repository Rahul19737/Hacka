<%= form_with(model: create_challenge, local: true, class:"form-inline justify-content-center") do |form| %>
  <% if create_challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(create_challenge.errors.count, "error") %> prohibited this create_challenge from being saved:</h2>

      <ul>
      <% create_challenge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% form.label :title %>
    <%= form.text_field :title, class:"form-control mb-2 mr-sm-2", placeholder:"Title" %>
  </div>

  <div class="field">
    <% form.label :description %>
    <%= form.text_field :description, class:"form-control mb-2 mr-sm-2", placeholder:"Description" %>
  </div>

  <div class="field">
    <% form.label :tags %>
    <%= form.select(:tags, %w[DP C Cpp OOPs Others], {include_blank: 'Select Tag'}, {class:"form-control custom-select mb-2 mr-sm-2"}) %>
  </div>

  <div class="field">
    <% form.label :user_id %>
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="field">
    <% form.label :employee_id %>
    <%= form.text_field :employee_id, value: current_user.user_id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Challenge', class:'btn btn-primary mb-2' %>
  </div>
<% end %>